# =============================================================================
# ReliAPI Configuration
# =============================================================================

# Redis (Required)
REDIS_URL=redis://localhost:6379/0

# Configuration file path
RELIAPI_CONFIG_PATH=config.yaml

# Logging
LOG_LEVEL=INFO
ENVIRONMENT=development

# CORS (comma-separated origins, or * for all)
CORS_ORIGINS=*

# API Authentication (optional - if set, required for all requests)
RELIAPI_API_KEY=

# =============================================================================
# LLM Provider API Keys
# =============================================================================

OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
MISTRAL_API_KEY=

# =============================================================================
# Paddle Payment Processing
# =============================================================================

PADDLE_API_KEY=
PADDLE_VENDOR_ID=
PADDLE_WEBHOOK_SECRET=
PADDLE_ENVIRONMENT=sandbox  # sandbox or production

# =============================================================================
# RapidAPI Integration (optional)
# =============================================================================

RAPIDAPI_API_KEY=

# =============================================================================
# Observability
# =============================================================================

# Prometheus metrics available at /metrics
# Grafana password (when using docker-compose with Grafana)
GRAFANA_PASSWORD=admin
